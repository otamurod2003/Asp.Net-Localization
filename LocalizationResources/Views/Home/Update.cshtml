@model Car
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["CreatePageTitle"];
}
<div>
    <h2 class="text-center">@Localizer["CreatePageTitle"]</h2>
</div>
<div>
    <form class="col-md-8 col-sm-12 col-lg-6 col-xl-5" method="post" asp-controller="home" asp-action="update">
        <div class="form-group m-2">
            <label  asp-for="@Model.CarName"></label>
            <input asp-for="@Model.CarName" class="form-control" />
            <span asp-validation-for="@Model.CarName" class="text-danger"></span>
        </div>
        <div class="form-group m-2">
            <label  asp-for="@Model.Price"></label>
            <input asp-for="@Model.Price" class="form-control" />
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>
        <div class="form-group m-1">
            <button type="submit" class="btn btn-primary">@Localizer["Update"]</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">@Localizer["Cancel"]</a>
        </div>
    </form>
</div>